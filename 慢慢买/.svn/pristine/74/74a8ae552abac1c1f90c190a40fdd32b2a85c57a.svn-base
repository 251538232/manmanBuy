@import 'base.less';
#header{
    z-index: 999;
    width: 100%;
    background-color: @main-color;
    padding: 15px;
    height: 50px;
    position: relative;
    top: 0;
    .icon-back{
        float: left;
        font-size: 20px;
        color: #fff;
    }
    >h3{
        font-size: 20px;
        font-weight: bold;
        margin: 0 auto;
        color: #fff;
    }
    .download {
        width: 34px;
        position: absolute;
        top: 8px;
        right: 10px;
    }
}
#footer {
    width: 100%;
    font-size: 12px;
    height: 96px;
    text-align: center;
    position: relative;
    bottom: 0px;
    z-index: 999;
    background-color: #fff;
    margin: 0px;
    .footer-top {
        font-size: 14px;
        .row {
            border: 1px solid #ccc;
            margin: 0;
            .col-xs-7 {
                padding: 0;
            }
            a {
                border-right: 1px solid #ccc;
                line-height: 34px;
            }
        }
    }
    .footer-bottom {
        padding-top: 15px;
        a {
            color: red;
        }
    }
}

#main{
    width: 100%;
    margin-top: 0;
    margin-bottom: 0;
    padding: 0;
    .container{
        background-color: #fff;
        .row{  
            .col-xs-6{
                border-bottom:1px solid #ccc;
                border-right:1px solid #ccc;
                padding: 10px 0 0 10px;
                a{ 
                    display: block; 
                    .product-img{
                        margin: 0 auto;
                        width: 140px;
                        height: 140px;
                        padding: 10px;
                        >img{
                            width: 100%;
                        }
                    }
                    .title{
                        font-size: 14px;
                        line-height: 18px;
                        height: 36px;
                        padding: 0 5px 0 5px;
                        display: -webkit-box;
                        -webkit-box-orient: vertical;
                        -webkit-line-clamp: 2;
                        overflow: hidden;
                        color: #333;
                        font-weight: bold;
                    }
                    .subtit{
                        padding: 0 5px 0 5px;
                        height: 18px;
                        line-height: 18px;
                        margin: 4px 0 4px 0;
                        text-align: left;
                        color: #ff9547;
                    }
                    .info-from{
                        padding: 0 5px 0 5px;
                        height: 36px;
                        font-size: 12px;
                        line-height: 36px;
                    }
                }
            }
        } 
    } 
}