html {
    font-size: 16px;
}

#main {
    height: 0;
    padding-top: 50px;
    height: 100%;
    .productlist {
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        padding:10px 5px;
        border-radius: 5px;
        .panel {
            border: none;
        }
        .panel-heading {
            padding: 0;
        }
        .product-item {
                height: 42px;
                line-height: 42px;
                padding: 0 20px;
                font-size: 16px;
                border-bottom: 1px solid #aaa;
                >span {
                    color: black;
                    font-weight: bold;
                }
                i {
                    line-height: 40px;
                }
        }

        
        .panel-collapse {
            .panel-body{
                padding: 0;
                .row {
                    margin: 0;
                    // padding: 0 6px;
                    a {
                    text-align: center;
                    padding: 0;
                    height: 40px;
                    line-height: 40px;
                    border-bottom: 1px solid #ccc;
                    border-right: 1px solid #ccc;
                    &:nth-child(3n) {
                        border-right: none;
                    }
                }
            }
            
          }
        
        }

    }
}