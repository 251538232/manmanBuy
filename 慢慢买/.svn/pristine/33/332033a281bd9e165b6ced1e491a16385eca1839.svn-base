html {
  font-size: 16px;
}
#main {
  height: 0;
  padding-top: 50px;
  height: 100%;
}
#main .productlist {
  background-color: #f2f2f2;
  border: 1px solid #ccc;
  padding: 10px 5px;
  border-radius: 5px;
}
#main .productlist .panel {
  border: none;
}
#main .productlist .panel-heading {
  padding: 0;
}
#main .productlist .product-item {
  height: 42px;
  line-height: 42px;
  padding: 0 20px;
  font-size: 16px;
  border-bottom: 1px solid #aaa;
}
#main .productlist .product-item > span {
  color: black;
  font-weight: bold;
}
#main .productlist .product-item i {
  line-height: 40px;
}
#main .productlist .panel-collapse .panel-body {
  padding: 0;
}
#main .productlist .panel-collapse .panel-body .row {
  margin: 0;
}
#main .productlist .panel-collapse .panel-body .row a {
  text-align: center;
  padding: 0;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
#main .productlist .panel-collapse .panel-body .row a:nth-child(3n) {
  border-right: none;
}
