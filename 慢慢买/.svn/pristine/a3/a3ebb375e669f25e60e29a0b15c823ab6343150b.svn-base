@import 'base.less';
// 头部
#header {
    position: static;
    width: 100%;
    background-color: #ff841d;
    margin: 0;
    >a {
        margin-top: 5px;
        float: left;
        color: #fff;
    }
    >h1 {
        height: 20px;
        font-size: 20px;
        color: #fff;
        font-weight: bold;
        margin: 0;
        margin-top: 5px;
        float: left;
        text-align: center;
    }
    >div {
        width: 50px;
        height: 44px;
        >img {
            margin-top: 5px;
            float: left;
            display: block;
            width: 32px; // height: 44px;
        }
    }
}

// 内容
#cxdiv {
    >ul {
        >li {
            border-bottom: 1px solid #ccc;
            background-color: #fff;
            height: 110px;
            >a {
                display: block;
                height: 128px;
                .pic {
                    height: 100px;
                    float: left;
                    >img {
                        height: 100px;
                    }
                }
                .info {
                    .title {
                        font-size: 15px;
                        >span {
                            color: red;
                        }
                    }
                    .other {
                        margin-top: 5px;
                        .mall {
                            font-size: 12px;
                        }
                        .comment {}
                    }
                }
            }
        }
    }
}

// 分页
#section {
    position: relative;
    width: 100%;
    height: 34px;
    .top-page {
        position: absolute;
        width: 100px;
        height: 40px;
        border: 1px solid#d4d4d4;
        padding: 8px 20px 8px 20px;
        background: -webkit-gradient(linear, 0 0, 0 100%, from(#f1f1f1), to(#d4d4d4));
        left:0px;
        top: 0;
    }
    .select {
        // display:inline-block;
        width: auto;
        margin: 0 100px;
        height: 40px;
        > select {
            height: 100%;
            width: 100%;
        }
    }
    .bottom-page {
        width: 100px;
        height: 40px;
        padding: 15px;
        border: 1px solid#d4d4d4;
        padding: 8px 20px 8px 20px;
        // margin-right: 5px;
        background: -webkit-gradient(linear, 0 0, 0 100%, from(#f1f1f1), to(#d4d4d4));
        position: absolute;
        right: 0px;
        top: 0px;
    }
}

#nav {
    background: linear-gradient(to bottom, #fff, #ccc);
    height: 36px;
    margin-top: 20px;
    >a {
        float: left;
        display: block;
        margin-top: 8px;
    }
    >span {
        margin-top: 8px;
        display: inline-block;
    }
}

#footer {
    margin-bottom: 0px;
}