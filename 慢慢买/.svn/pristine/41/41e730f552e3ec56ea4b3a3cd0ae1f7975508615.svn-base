@import 'base.less';
// 头部
#header {
    // padding: 0;
    position: fixed;
    height: 45px;
    >a {
        color: #fff;
		float: left; // margin-top: 2px;
		margin-top: 5px;		
    }
    >h3 {
        font-size: 20px;
        margin: 0;
        padding: 0;
        width: auto;
        text-align: center;
        color: #fff;
        height: 100%;
		line-height: 25px;
    }
}

// 主体
#main {
    margin: 0;
    padding: 0;
    position: relative;
	height: auto; // background-color: #f1f1f1;
	margin-top: 45px;
    .products-top {
        position: relative;
        border-bottom: 1px solid #eee;
        .select {
            width: auto;
			height: 35px; 
			// background-color: gray;
            // overflow: hidden;
            margin-right: 35px;
            >ul {
                margin-bottom: 0;
                >li {
                    float: left;
                    width: 33.3333333%;
                    line-height: 35px;
                    >a {
                        display: block;
                        width: 100%;
                        text-align: center;
                        text-decoration: none; 
                    }
                }
            }
		}
		// .select {
		// 	width: auto;
		// 	height: 35px;
		// 	.btn-group{
		// 		width: 33.3333%;
		// 	}
		// }
        .search {
            width: 35px;
            height: 35px;
            display: inline-block; // background-color: skyblue;
            // float: right;
            position: absolute;
            top: 0;
            right: 0;
            background-image: url("../images/icon_bar.png");
            background-size: 220px 132px;
            background-position: -5px -5px;
        }
	}
	
	.options {
		width: 100%;
		position: absolute;
		z-index: 999;
	}

    .shopName-options,.area-options {
        width: 100%;
        display: none;
        // position: absolute;
        z-index: 999;
        background-color: #fff;
        >ul {
            margin-bottom: 0;
            >li {
                width: 100%;
                border-bottom: 1px solid #eee;
                >a {
                    display: block;
                    height: 35px;
                    line-height: 35px;
					padding: 0 10px;
					text-decoration: none;
                }
            }
        }
    }
    .products-body {
        .row {
            margin: 0;
            >div {
                padding: 10px;
                background-color: #fff;
                border: 1px solid #eee;
                >a {
                    display: block;
                    >img {
						width: 100%;
						height: 138px;
                    }
                    >p {
                        text-align: center;
                        overflow: hidden;
                        margin: 0;
                        white-space: nowrap;
                        word-wrap: break-word;
                        word-break: break-all;
                    }
                    >span {
                        color: red;
                    }
                }
            }
        }
    }
}