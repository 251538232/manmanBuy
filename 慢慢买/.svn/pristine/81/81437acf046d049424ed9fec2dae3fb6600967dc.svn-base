@import './base.less';

#search {
    border-bottom: 1px solid #ccc;
}
#footer {
    margin-bottom: 40px;
    margin-top: 20px;
}
#main {
    >.title {
        height: 30px;
        line-height: 40px;
        .row {
            text-align: center;
            margin: 0;
            >div {
               &.active {
                   >a {
                       text-decoration: none;
                    //    color: @main-color;
                       &:focus, &:hover {
                        text-decoration: none;
                    }
                }
                   
               }
               >a {
                text-decoration: none;
                &:focus, &:hover {
                 color: @main-color;
                 text-decoration: none;
                }
              }
            }
        }
    }
    .productlist {
        padding: 20px;
        .media {
            position: relative;
            >a {
                width: 100%;
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
                margin-bottom: 10px;
            }
            padding: 10px 8px;
            .media-left {
                img {
                    width: 100px;
                    height: 100px;
                    vertical-align: middle;
                    margin-right: 10px;
                }
            }
            .media-body {
                h4 {
                    font-size: 14px;
                }
                p {
                    margin-top: 30px;
                    font-size: 16px;
                    color: @main-color;
                    font-weight: bold;
                }
                span {
                    font-size: 12px;
                }
                a {
                    font-size: 12px;
                }
            }

        }
    }
    #sales,
    #price,
    #selected {
        margin: 30px auto;
        width: 400px;
        height: 200px;
        background-color: @main-color;
        text-align: center;
        line-height: 200px;
        font-size: 30px;
        border-radius: 20px;
    }
    #nav {
        background-color: #efefef;
        >.pagination {
            margin-left: 50%;
            transform: translateX(-50%);
                >a {
                    display: inline-block;
                    text-decoration: none;
                    background-color: @main-color;
                    &.selection {
                    width: 82px;
                    height: 33px;
                    padding: 7px 0;
                    color: white;
                    span {
                        display: block;
                        font-size: 20px;
                        text-align: center;
                        line-height: 19px;
                        }
                    }
                
                }
                >select {
                    display: inline-block;
                    position: relative;
                    top: -4px;
                    padding: 7px 15px;
                    margin-bottom: 5px;
                    width: 82px;
                    height: 33px;
                    line-height: 19px;
                }
               
           }   
        }
}
#app-promotion-bar {
    width: 100%;
    height: 60px;
    line-height: 30px;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #faf8f5;
    z-index: 998;
    .closefix {
        position: absolute;
        width: 45px;
        height: 60px;
        padding: 19px 12px 20px;
        top: 0;
        left: 0;
        background: url(https://img.alicdn.com/imgextra/i3/379516416/TB2U68FkXXXXXXBXFXXXXXXXXXX_!!379516416.png) center center;
        background-repeat: no-repeat;
        background-size: 21px;
    }
    .icon {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 46px;
        width: 41px;
        height: 41px;
        margin: auto;
        background-image: url(http://m.manmanbuy.com/download/images/logo.png);
        background-position: center;
        background-size: 41px;
    }
    >p {
        
        margin-bottom: 0; 
        color: #888;
        margin-left: 97px;
        line-height: 1;
    }
    .titlefix {
        margin-top: 12px;
        margin-bottom: 5px;
        font-size: 18px;
    }
    .download-btn {
        position: absolute;
        top: 0;
        right: 10px;
        bottom: 0;
        width: 74px;
        height: 33px;
        padding-top: 10px;
        margin: auto;
        font-size: 13px;
        line-height: 1;
        text-align: center;
        color: #fff;
        background-color: #ff7700;
        border-radius: 4px;
        box-shadow: inset 0 -2px #ff5500;
        text-decoration: none;
    }
}