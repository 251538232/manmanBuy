@import 'base.less';
html,body {
    height: 100%;
    background-color: #fff;
}
#nav {
    .row{
        margin-top: 100px;
        
    }
    .row.hid {
        height: 180px;
        overflow: hidden;
       
    }
    // .row .visible {
    //     height: 180px;
    //     overflow:visible ;
    // }
    a {
        display: block;
        text-align: center;
        text-decoration: none;      
        >img {
            width: 60px;
        }
    }
}
#discount{
    position: relative;
    >h4 {
        width: 100%;
        height: 30px;
        background-color: orange;
        padding-left: 10px;
        font-size: 16px;
        line-height: 30px;
        color: #fff;
    }
    >i {
        position: absolute;
        right: 0px;
        padding-right: 10px;
        font-size: 18px;
        color: #fff;
        // line-height: 30px;
        top: 5px;
    }
    .discount-content {
        .media-left {
            >img {
                width: 100px;
            }
        }
        .media-body {
            .media-heading {
                font-size: 16px;
                color: #000;
            }
            >span {
                color: red;
            }
            >div {
                .pull-left {
                    font-size: 12px;
                    margin-top: 20px;

                }
                .pull-right {
                    margin-top: 20px;
                }
            }
        }
    }
}
.gengduo {
    width: 100%;
    height: 32px;
    margin: 10px;
    background-color: #F4F4F4;
    >a {
        display: block;
        text-align: center;
        line-height: 30px;
        font-size: 14px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    
}
.paihang {
    width: 100%;
    height: 30px;
    background-color: orange;
    position: relative;
    >h4 {
        position: absolute;
        color: #fff;
        top: -5px;
        left: 10px;
        font-size: 18px;

    }
    >i {
        position: absolute;
        right: 10px;
        top: 6px;
        color: #fff;
        font-size: 16px;
    }
}